<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cap7.com.br.petcare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ProprietarioActivity"
            android:theme="@style/ProprietarioTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AnimalActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ConsultaPerfilActivity" />
        <activity android:name=".activity.ConsultaAnimalActivity" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetalhesAnimalActivity" />
        <activity android:name=".activity.AlterarAnimalActivity"></activity>
    </application>

</manifest>
